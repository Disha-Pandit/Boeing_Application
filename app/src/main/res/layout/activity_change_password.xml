<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDFFFFFF"
    tools:context=".main_activitys.ChangePassword">



    <android.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1e70b2"
        android:id="@+id/toolbar">
        <Button
            android:layout_width="70dp"
            android:id="@+id/back_button"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:paddingTop="15dp"
            android:scaleType="fitXY"
            android:drawableRight="@drawable/custom_back"
            android:backgroundTint="#1e70b2"/>
        <TextView
            android:id="@+id/Change_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_marginRight="75dp"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:background="#1e70b2" />
    </android.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#227dc6"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:id="@+id/Reset"
            android:layout_below="@+id/toolbar">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/image_lock"/>
            <TextView
                android:layout_width="310dp"
                android:layout_height="100dp"
                android:paddingTop="20dp"
                android:text="Reset your password by entering your current password."
                android:textSize="18dp"
                android:textStyle="italic"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                />

        </LinearLayout>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="330dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="150dp"
        app:cardBackgroundColor="@color/white">
        <EditText
            android:id="@+id/current_password"
            android:layout_width="320dp"
            android:layout_height="46dp"
            android:background="@drawable/change_shape"
            android:hint="Current Password *"
            android:textColor="@color/black"
            android:textColorHint="#C8C4CD"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="50dp"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/new_password"
            android:layout_below="@+id/current_password"
            android:layout_width="320dp"
            android:layout_height="46dp"
            android:background="@drawable/change_shape"
            android:hint="New Password *"
            android:textColor="@color/black"
            android:textColorHint="#C8C4CD"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="110dp"
            android:paddingLeft="20dp"/>

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="320dp"
            android:layout_height="46dp"
            android:background="@drawable/change_shape"
            android:hint="Confirm Password *"
            android:textColor="@color/black"
            android:textColorHint="#C8C4CD"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="170dp"
            android:paddingLeft="20dp"/>

        <LinearLayout
            android:id="@+id/Change_button"
            android:layout_marginTop="270dp"
            android:layout_gravity="end"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:background="@drawable/change_button"
            android:padding="6dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:elevation="5dp"
            >
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/greyicon"
                android:layout_gravity="center_vertical"
                android:elevation="15dp"
                />
            <TextView
                android:id="@+id/buttonChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:elevation="15dp"
                android:textStyle="bold"
                android:textColor="#A9A9A9"
                android:textSize="15dp"
                android:text="Change"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/nav_items"
        style="@style/Widget.Design.BottomNavigationView"
        app:labelVisibilityMode="unlabeled" />







</RelativeLayout>